pipeline {
    agent any
    stages {
        stage('Lint') { 
            agent {
                dockerfile true
            }
            steps {
                sh 'pylint --rcfile=pylintrc $(find . -iname "*.py")'
            }
        }
        stage('Test') {
            agent {
                dockerfile true
            }
            steps {
                sh 'python -m coverage run --rcfile=.coveragerc -m unittest discover -s src -p "*_spec.py" --verbose -b'
                sh 'python -m coverage report --rcfile=.coveragerc'
            }
        }
    }
}